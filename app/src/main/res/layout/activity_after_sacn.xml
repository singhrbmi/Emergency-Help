<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="hacker.l.emergency_help.activity.AfterSacnActivity">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="@dimen/margin30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Name:-"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="@dimen/margin15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Email Id:-"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center|left"
                android:text="Phone No:-"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sms"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_1_dp"
                    android:layout_weight=".5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_sms_black_24dp" />

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_settings_phone_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center|left"
                android:text="Emergency1:"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_emergency"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sms1"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_1_dp"
                    android:layout_weight=".5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_sms_black_24dp" />

                <ImageView
                    android:id="@+id/call1"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_settings_phone_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layouttwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center|left"
                android:text="Emergency2:"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_emergency2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sms2"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_1_dp"
                    android:layout_weight=".5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_sms_black_24dp" />

                <ImageView
                    android:id="@+id/call2"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_settings_phone_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutthree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center|left"
                android:text="Emergency3:"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_emergency3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sms3"
                    android:layout_width="0dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_1_dp"
                    android:layout_weight=".5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_sms_black_24dp" />

                <ImageView
                    android:id="@+id/call3"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_settings_phone_black_24dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Address:-"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="City:-"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Pin Code:-"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize16" />

            <TextView
                android:id="@+id/tv_pincode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textSize14" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin10"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/textSize18"
        android:visibility="gone" />
</LinearLayout>
