<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="hacker.l.emergency_help.fragments.UserComplentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_marginTop="@dimen/dimen_10_dp"
            android:text="Your Suggestion"
            android:textColor="@color/grey_hard"
            android:textSize="@dimen/textSize14" />

        <EditText
            android:id="@+id/edt_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150_dp"
            android:layout_margin="@dimen/dimen_10_dp"
            android:background="@drawable/done_corner_round"
            android:hint="Enter Here"
            android:paddingLeft="@dimen/margin10"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/dimen_10_dp"
            android:background="@drawable/capsule_button"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>

</FrameLayout>
