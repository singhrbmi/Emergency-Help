<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activity.SplashActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_gravity="center|top"
            android:layout_weight=".32"
            android:scaleType="fitXY"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/adminMsg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin10"
            android:layout_weight=".13"
            android:background="@drawable/done_corner_round"
            android:gravity="center"
            android:padding="@dimen/margin10"
            android:text=""
            android:textColor="@color/selected_tab"
            android:textSize="@dimen/textSize14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin10"
            android:layout_weight=".22"
            android:background="@drawable/done_corner_round"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageMsg"
                android:layout_width="@dimen/margin100"
                android:layout_height="90dp"
                android:layout_gravity="center|top"
                android:layout_margin="@dimen/margin5"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />


            <TextView
                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin10"
                android:text="Welcome to Suraksha Kavach"
                android:textColor="@color/selected_tab"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

